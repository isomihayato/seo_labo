<%provide(:title,'研究成果編集')%>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(url: result_create_path, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :name, 'メンバー名' %>
      <%= f.select :name,options_for_select(@members,@member.ids),{},{class: 'form-control'}%>
    </div>

    <div class="form-group">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control',value:@result.title%>
    </div>
    <div class="form-group">
      <%= f.label :image, 'image' %>
      <%= f.file_field :image, class: 'form-control',required: true%>
    </div>

    <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  <% end %>
  </div>
</div>
