<% provide(:title, '記事編集')%>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(url: news_update_path(id: @article.id), method: :put, local: true) do |f| %>

    <div class="form-group">
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control',value: @article.title%>
    </div>
    <div class="form-group">
      <%= f.label :image, 'image' %>
      <%= f.file_field :image, class: 'form-control'%>
    </div>

    <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
  <% end %>
  </div>
</div>
